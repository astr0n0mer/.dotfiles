{
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "csv-preview.capitalizeHeaders": false,
  "csv-preview.formatValues": "never",
  "csv-preview.lineNumbers": "source",
  "csv-preview.resizeColumns": "all",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": true,
  "dotenv.enableAutocloaking": true,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "block-outline",
  "editor.fontFamily": "\"JetBrainsMono Nerd Font\", \"BitstromWera Nerd Font\", \"Hack Nerd Font\", \"AurulentSansM Nerd Font\", \"LiterationMono Nerd Font\", \"AnonymicePro Nerd Font\", \"FiraCode Nerd Font\", \"Cartograph CF\", MonoLisa, \"JetBrains Mono\", \"Cascadia Code\", Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.scrollbar.horizontalScrollbarSize": 6,
  "editor.scrollbar.verticalScrollbarSize": 6,
  "editor.stickyScroll.enabled": true,
  "editor.tokenColorCustomizations": {
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "editor.wordWrap": "on",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    ".env*": "dotenv"
  },
  "files.defaultLanguage": "${activeEditorLanguage}",
  "files.insertFinalNewline": true,
  "git.autofetch": true,
  "git.closeDiffOnOperation": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": false,
    "plaintext": false,
    "scminput": false
  },
  "githubPullRequests.notifications": "pullRequests",
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "repo:${owner}/${repository} is:open review-requested:${user} sort:updated-desc"
    },
    {
      "label": "Reviewed By Me",
      "query": "repo:${owner}/${repository} is:open reviewed-by:${user} -author:${user} -review:approved sort:updated-desc"
    },
    {
      "label": "Assigned To Me",
      "query": "repo:${owner}/${repository} is:open assignee:${user} sort:updated-desc"
    },
    {
      "label": "Created By Me",
      "query": "repo:${owner}/${repository} is:open author:${user} sort:updated-desc"
    },
    {
      "label": "Created By Others",
      "query": "repo:${owner}/${repository} is:open -author:${user} -review:approved sort:updated-desc"
    },
    {
      "label": "Approved",
      "query": "repo:${owner}/${repository} is:open review:approved"
    }
  ],
  "githubPullRequests.showPullRequestNumberInTree": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "liveSassCompile.settings.autoprefix": [
    "> 1%",
    "last 2 versions"
  ],
  "liveSassCompile.settings.formats": [
    {
      "extensionName": ".css",
      "format": "expanded",
      "savePath": "~/../css",
      "savePathReplacementPairs": null
    }
  ],
  "liveSassCompile.settings.includeItems": [],
  "liveSassCompile.settings.rootIsWorkspace": null,
  "liveSassCompile.settings.showOutputWindowOn": "Error",
  "liveSassCompile.settings.useNewCompiler": false,
  "liveServer.settings.NoBrowser": true,
  "rest-client.enableTelemetry": false,
  "ruff.lineLength": 119,
  "ruff.lint.select": [
    "ALL"
  ],
  "ruff.nativeServer": true,
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.enableMultiLinePasteWarning": "auto",
  "terminal.integrated.fontSize": 13,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.vimrc",
  "window.commandCenter": true,
  "window.titleBarStyle": "custom",
  "windsurf.autocompleteSpeed": "fast",
  // "workbench.colorTheme": "GitHub Dark Dimmed",
  // "workbench.colorTheme": "Atom One Dark",
  // "workbench.colorTheme": "Night Owl",
  // "workbench.colorTheme": "One Dark Pro",
  // "workbench.colorTheme": "Bearded Theme Arc EolStorm",
  // "workbench.colorTheme": "Bearded Theme HC Midnight Void",
  "workbench.colorTheme": "Bearded Theme Arc",
  "workbench.list.horizontalScrolling": true,
  "workbench.sideBar.location": "right"
}
