<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.speedtest.health_check</string>

    <key>ProgramArguments</key>
    <array>
	<string>/bin/sh</string>
	<string>-c</string>
	<string>/opt/homebrew/bin/speedtest --secure --csv >> "$HOME/.local/state/speedtest/speedtests.csv"</string>
    </array>

    <key>StandardOutPath</key>
    <string>/tmp/com.speedtest.health_check.out.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/com.speedtest.health_check.err.log</string>

    <key>StartCalendarInterval</key>
    <array>
	<dict>
	    <key>Minute</key><integer>0</integer>
	</dict>
	<dict>
	    <key>Minute</key><integer>15</integer>
	</dict>
	<dict>
	    <key>Minute</key><integer>30</integer>
	</dict>
	<dict>
	    <key>Minute</key><integer>45</integer>
	</dict>
    </array>
</dict>
</plist>
