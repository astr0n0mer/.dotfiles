# Configuration guide: https://github.com/koekeishiya/skhd#configuration

# change window focus within space
cmd - h : /opt/homebrew/bin/yabai -m window --focus west
cmd - j : /opt/homebrew/bin/yabai -m window --focus south
cmd - k : /opt/homebrew/bin/yabai -m window --focus north
cmd - l : /opt/homebrew/bin/yabai -m window --focus east


#change focus between external displays (left and right)
cmd - s: /opt/homebrew/bin/yabai -m display --focus west
cmd - g: /opt/homebrew/bin/yabai -m display --focus east


# rotate layout clockwise
shift + cmd - r : /opt/homebrew/bin/yabai -m space --rotate 270

# flip along y-axis
shift + cmd - y : /opt/homebrew/bin/yabai -m space --mirror y-axis

# flip along x-axis
shift + cmd - x : /opt/homebrew/bin/yabai -m space --mirror x-axis

# toggle window float
shift + cmd - t : /opt/homebrew/bin/yabai -m window --toggle float --grid 4:4:1:1:2:2


# maximize a window
shift + cmd - m : /opt/homebrew/bin/yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + cmd - e : /opt/homebrew/bin/yabai -m space --balance


# swap windows
shift + cmd - h : /opt/homebrew/bin/yabai -m window --swap west
shift + cmd - j : /opt/homebrew/bin/yabai -m window --swap south
shift + cmd - k : /opt/homebrew/bin/yabai -m window --swap north
shift + cmd - l : /opt/homebrew/bin/yabai -m window --swap east


# move window and split
ctrl + cmd - j : /opt/homebrew/bin/yabai -m window --warp south
ctrl + cmd - k : /opt/homebrew/bin/yabai -m window --warp north
ctrl + cmd - h : /opt/homebrew/bin/yabai -m window --warp west
ctrl + cmd - l : /opt/homebrew/bin/yabai -m window --warp east


# move window to display left and right
shift + cmd - s : /opt/homebrew/bin/yabai -m window --display west; /opt/homebrew/bin/yabai -m display --focus west;
shift + cmd - g : /opt/homebrew/bin/yabai -m window --display east; /opt/homebrew/bin/yabai -m display --focus east;


# move window to prev and next space
shift + cmd - p : /opt/homebrew/bin/yabai -m window --space prev;
shift + cmd - n : /opt/homebrew/bin/yabai -m window --space next;

# move window to space #
shift + cmd - 1 : /opt/homebrew/bin/yabai -m window --space 1;
shift + cmd - 2 : /opt/homebrew/bin/yabai -m window --space 2;
shift + cmd - 3 : /opt/homebrew/bin/yabai -m window --space 3;
shift + cmd - 4 : /opt/homebrew/bin/yabai -m window --space 4;
shift + cmd - 5 : /opt/homebrew/bin/yabai -m window --space 5;
shift + cmd - 6 : /opt/homebrew/bin/yabai -m window --space 6;
shift + cmd - 7 : /opt/homebrew/bin/yabai -m window --space 7;
shift + cmd - 8 : /opt/homebrew/bin/yabai -m window --space 8;
shift + cmd - 9 : /opt/homebrew/bin/yabai -m window --space 9;


# stop/start/restart /opt/homebrew/bin/yabai
ctrl + cmd - q : /opt/homebrew/bin/yabai --stop-service
ctrl + cmd - s : /opt/homebrew/bin/yabai --start-service
ctrl + cmd - r : /opt/homebrew/bin/yabai --restart-service
